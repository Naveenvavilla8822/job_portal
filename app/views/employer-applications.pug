doctype html
html
  head
    title Applications Received - Job Portal
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    style.
      body { background: #f8f9fa; }

  body(class="min-vh-100 d-flex flex-column")
    include navbar

    .flex-fill
      .container.mt-5
        .d-flex.justify-content-between.align-items-center.mb-4
          h1.text-primary.mb-0 Applications Received
        if apps.length === 0
          .alert.alert-info.text-center No applications have been submitted yet.
        else
          .table-responsive
            table.table.table-hover.align-middle
              thead.table-light
                tr
                  th(scope="col") #
                  th(scope="col") Job Title
                  th(scope="col") Applicant
                  th(scope="col") Email
                  th(scope="col") LinkedIn
                  th(scope="col") Status
                  th(scope="col") Applied At
              tbody
                each app, idx in apps
                  tr
                    td #{idx + 1}
                    td #{app.job_title}
                    td #{app.applicant_name}
                    td 
                      a(href=`mailto:${app.applicant_email}`)= app.applicant_email
                    td 
                      a(href=app.linkedin_url target="_blank") View Profile
                    td #{app.status}
                    td #{new Date(app.applied_at).toLocaleDateString()}

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
