doctype html
html
  head
    title Contact Us - Job Portal
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    include navbar

    .container.mt-5
      h1.text-center.text-primary Contact Us
      hr

      .row
        .col-md-6.offset-md-3
          .card
            .card-header
              h3 Get in Touch
            .card-body
              form(method="POST" action="/contact")
                .mb-3
                  label(for="name") Name
                  input.form-control(type="text" id="name" name="name" placeholder="Your Name" required)
                .mb-3
                  label(for="email") Email
                  input.form-control(type="email" id="email" name="email" placeholder="Your Email" required)
                .mb-3
                  label(for="message") Message
                  textarea.form-control(id="message" name="message" rows="5" placeholder="Your Message" required)
                .mb-3
                  button.btn.btn-primary(type="submit") Send Message

            .card-footer.text-center
              p If you have any questions, feel free to reach out to us!

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
