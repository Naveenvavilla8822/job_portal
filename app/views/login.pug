doctype html
html
  head
    title Login - Job Portal
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    // Bootstrap CSS + Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    style.
      /* subtle gradient background */
      body {
        background: linear-gradient(135deg, #e3f2fd 0%, #ffffff 100%);
      }

  body(class="min-vh-100 d-flex flex-column")
    include navbar

    .flex-fill.d-flex.align-items-center
      .container
        .row.justify-content-center
          .col-lg-6.col-md-8
            .card.border-0.rounded-4.shadow-lg
              .card-body.p-5
                // header icon + title
                .text-center.mb-4
                  i.bi.bi-box-arrow-in-right.fs-1.text-primary
                  h2.text-primary.mt-3.mb-0 Welcome Back
                  p.text-muted.mt-2.mb-4 Log in to your account to continue

                form(method="POST" action="/authenticate")
                  .form-floating.mb-3
                    input#email.form-control(type="email" name="email" placeholder="name@example.com" required autofocus)
                    label(for="email") Email address
                  .form-floating.mb-4
                    input#password.form-control(type="password" name="password" placeholder="Password" required)
                    label(for="password") Password

                  .d-grid
                    button.btn.btn-primary.btn-lg(type="submit") Login

              .card-footer.text-center.py-3.bg-transparent
                small.text-muted
                  | Don't have an account?
                  a.text-primary.ms-1(href="/signup") Register here

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
