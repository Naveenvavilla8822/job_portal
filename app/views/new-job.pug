doctype html
html
  head
    title Post New Job - Job Portal
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body(class="min-vh-100 d-flex flex-column")
    include navbar

    .flex-fill.d-flex.align-items-center
      .container
        .row.justify-content-center
          .col-lg-6.col-md-8
            .card.shadow-lg.rounded-4.border-0
              .card-body.p-5
                h2.mb-4.text-primary Post a New Job

                form(method="POST" action="/jobs/new")
                  .mb-3
                    label.form-label(for="title") Job Title
                    input#title.form-control(type="text" name="title" required)

                  .mb-3
                    label.form-label(for="company_id") Company
                    select#company_id.form-select(name="company_id" required)
                      //- Always show a placeholder
                      option(value="" disabled selected) Select company…
                      each comp in companies
                        option(value=comp.company_id)= comp.name

                  .mb-3
                    label.form-label(for="description") Description
                    textarea#description.form-control(name="description" rows="4" required)

                  .mb-3
                    label.form-label(for="salary_range") Salary Range
                    input#salary_range.form-control(type="text" name="salary_range")

                  .mb-3
                    label.form-label(for="job_type") Job Type
                    select#job_type.form-select(name="job_type" required)
                      option(value="" disabled selected) Select…
                      option(value="Full-time") Full-time
                      option(value="Part-time") Part-time
                      option(value="Contract") Contract
                      option(value="Internship") Internship

                  .mb-3
                    label.form-label(for="location") Location
                    input#location.form-control(type="text" name="location")

                  .d-grid
                    button.btn.btn-success.btn-lg(type="submit") Create Job

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
