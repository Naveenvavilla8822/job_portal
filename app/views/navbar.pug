nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  .container
    //- If employer is logged in, show Dashboard, Post Job, Logout
    if loggedIn && user.role == 'employer'
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(
            href="/dashboard"
            aria-current=(activePage=='dashboard'?'page':false)
            class=(activePage=='dashboard'?'active':'')
          ) Dashboard
        li.nav-item
          a.nav-link(
            href="/jobs/new"
            aria-current=(activePage=='post-job'?'page':false)
            class=(activePage=='post-job'?'active':'')
          ) Post Job
      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(href="/logout")
            i.bi.bi-box-arrow-right.me-1
            | Logout

    //- Otherwise show standard nav
    else
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(
            href="/"
            aria-current=(activePage=='home'?'page':false)
            class=(activePage=='home'?'active':'')
          ) Home
        li.nav-item
          a.nav-link(
            href="/jobs"
            aria-current=(activePage=='jobs'?'page':false)
            class=(activePage=='jobs'?'active':'')
          ) Jobs
        li.nav-item
          a.nav-link(
            href="/about"
            aria-current=(activePage=='about'?'page':false)
            class=(activePage=='about'?'active':'')
          ) About
        li.nav-item
          a.nav-link(
            href="/contact"
            aria-current=(activePage=='contact'?'page':false)
            class=(activePage=='contact'?'active':'')
          ) Contact

      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        if !loggedIn
          li.nav-item
            a.nav-link(
              href="/login"
              aria-current=(activePage=='login'?'page':false)
              class=(activePage=='login'?'active':'')
            ) Login
          li.nav-item
            a.nav-link(
              href="/signup"
              aria-current=(activePage=='signup'?'page':false)
              class=(activePage=='signup'?'active':'')
            ) Register
        else
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(
              href="#"
              id="navbarUser"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            )
              if user.profile_picture
                img.rounded-circle(src=user.profile_picture alt="Profile" width="32" height="32")
              else
                i.bi.bi-person-circle.fs-4.me-2
              | #{user.name}
            ul.dropdown-menu.dropdown-menu-end(aria-labelledby="navbarUser")
              li
                a.dropdown-item(href="/profile")
                  i.bi.bi-pencil-square.me-2
                  | Profile
              hr.dropdown-divider
              li
                a.dropdown-item(href="/logout")
                  i.bi.bi-box-arrow-right.me-2
                  | Logout
