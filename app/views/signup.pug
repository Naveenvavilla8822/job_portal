doctype html
html
  head
    title Sign Up - Job Portal
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    // Bootstrap CSS + Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    style.
      /* subtle gradient background */
      body {
        background: linear-gradient(135deg, #e3f2fd 0%, #ffffff 100%);
      }

  body(class="min-vh-100 d-flex flex-column")
    include navbar

    .flex-fill.d-flex.align-items-center
      .container
        .row.justify-content-center
          .col-lg-6.col-md-8
            .card.border-0.rounded-4.shadow-lg
              .card-body.p-5
                // header icon + title
                .text-center.mb-4
                  i.bi.bi-person-plus-fill.fs-1.text-success
                  h2.text-success.mt-3.mb-0 Create Your Account
                  p.text-muted.mt-2.mb-4 Sign up to explore thousands of jobs

                form(method="POST" action="/set-password")
                  .form-floating.mb-3
                    input#name.form-control(type="text" name="name" placeholder="Your Name" required autofocus)
                    label(for="name") Name
                  .form-floating.mb-3
                    input#email.form-control(type="email" name="email" placeholder="name@example.com" required)
                    label(for="email") Email address
                  .form-floating.mb-3
                    input#password.form-control(type="password" name="password" placeholder="Password" required)
                    label(for="password") Password
                  .form-floating.mb-3
                    select#role.form-select(name="role" required)
                      option(value="" disabled selected) Select role
                      option(value="job_seeker") Job Seeker
                      option(value="employer") Employer
                    label(for="role") Role
                  .form-floating.mb-3
                    input#location.form-control(type="text" name="location" placeholder="Location")
                    label(for="location") Location (optional)
                  .form-floating.mb-4
                    textarea#bio.form-control(name="bio" placeholder="Brief bio about yourself" style="height: 100px;")
                    label(for="bio") Bio (optional)

                  .d-grid
                    button.btn.btn-success.btn-lg(type="submit") Register

              .card-footer.text-center.py-3.bg-transparent
                small.text-muted
                  | Already have an account?
                  a.text-success.ms-1(href="/login") Login here

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
