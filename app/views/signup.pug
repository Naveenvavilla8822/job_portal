doctype html
html
  head
    title Sign Up - Job Portal
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    include navbar

    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow
            .card-header.text-center.bg-success.text-white
              h3 Create an Account
            .card-body
              form(method="POST" action="/set-password")
                .mb-3
                  label(for="email") Email address
                  input#email.form-control(type="email" name="email" required placeholder="Enter email")
                .mb-3
                  label(for="password") Password
                  input#password.form-control(type="password" name="password" required placeholder="Create password")
                .d-grid
                  button.btn.btn-success(type="submit") Register

            .card-footer.text-center
              p Already have an account?
              a(href="/login") Login here

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
